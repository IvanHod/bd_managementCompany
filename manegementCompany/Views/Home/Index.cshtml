@using web.Models;
﻿@model IEnumerable < Organization >

@{
    ViewBag.Title = "Главная";
}
<h2>Главная</h2>
<div class="row">
	<div class="col-md-8">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">С нами уже
					<span class="pull-right">
						<a href="/Organization/Create" class="btn btn-xs btn-success">Создать</a>
					</span>
				</h3>
			</div>
			<div class="panel-body">
				<table class="table">
					<thead>
					<tr>
						<td>Полное наименование</td>
						<td>Наименование</td>
					</tr>
					</thead>
					<tbody>
					@if(@Model.Count() == 0) {
						<tr>
							<td colspan="2">Нет организаций</td>
						</tr>
					}
					@foreach(Organization o in @Model) {
						<tr>
							<td>@o.fullName</td>
							<td>@o.name</td>
						</tr>	
					}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="col-md-4">
		@if( @Session["Model"] == null ) {
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title">Войти в организацию</h4>
			</div>
			<div class="panel-body">
				<form action="/Organization/Authorization" method="post">
					<div class="row form-group">
						<div class="col-md-4">E-mail:</div>
						<div class="col-md-8">
							<input name="email" class="form-control" />
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-4">Пароль:</div>
						<div class="col-md-8">
							<input type="password" name="password" class="form-control" />
						</div>
					</div>
					<input type="submit" class="btn btn-success pull-right" value="Войти" />
				</form>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4 class="panel-title">Я собственник</h4>
			</div>
			<div class="panel-body">
				<form action="/Owner/Authorization" method="post">
					<div class="row form-group">
						<div class="col-md-4">E-mail:</div>
						<div class="col-md-8">
							<input name="email" class="form-control" />
						</div>
					</div>
					<div class="row form-group">
						<div class="col-md-4">Пароль:</div>
						<div class="col-md-8">
							<input type="password" name="password" class="form-control" />
						</div>
					</div>
					<input type="submit" class="btn btn-success pull-right" value="Войти" />
				</form>
			</div>
		</div>
		} else {
			<a href="/Home/logout" class="btn btn-block btn-danger">Выйти</a>
		}
	</div>
</div>
<script>
	function setActionTab() {
		$('nav li').removeClass('active');
		$('#home').addClass("active");
	}
</script>